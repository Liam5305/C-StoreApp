@{
    ViewData["Title"] = "Home Page";
}

<div class="top-main">
    <div class="top-content">
        <h1 class="top-title">Welcome to the Shop</h1>
        <p class="top-subtitle">Discover amazing products in our ASP.NET shop</p>
        <div id="currentDate" class="date-badge"></div>
    </div>
</div>

<div class="featured-section">
    <div class="card-grid">
        <div class="feature-card">
            <i class="fas fa-star icon"></i>
            <h2>New Arrivals</h2>
            <p>Check out our latest products and exclusive deals.</p>
            <a href="/items" class="action-button">View Products</a>
        </div>
        <div class="feature-card">
            <i class="fas fa-users"></i>
            <h2>Join Members</h2>
            <p>Get special discounts and early access to sales.</p>
            <a href="/users" class="action-button">View Members</a>
        </div>
        <div class="feature-card">
            <i class="fas fa-gift"></i>
            <h2>Special Offers</h2>
            <p>Limited time deals you won't want to miss.</p>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>